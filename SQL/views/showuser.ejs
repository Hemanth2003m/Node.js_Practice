<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>show All user</title>
    <style>
       table, th, td{
        border: 1px solid black;
       }
    </style>
</head>
<body>
    <table>
        <form method="get" action = "/user/post">
            <button>Add</button>
        </form>
    
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>name</th>
            
        </tr>
        <% for(let user of users){  %>
            <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.name %></td>
            <td>
                <form method="get" action = "/user/<%= user.id %>/edit">
                    <button>Edit</button>
                </form>

            </td>
            <td>
                <form method="get" action = "/user/<%= user.id %>/delete">
                    <button>Delete</button>
                </form>
            </td>
            
                
            </tr>
            <% } %>

            
    </table>
    
</body>
</html>